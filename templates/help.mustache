{{!
    @template local_intellidata/help
    Template for showing the IntelliBoard Help page.

    Context variables required for this template:
    * video_img_url - The link to video image url.
    * play_btn_url - The link to video play btn image.
    * bg_img_url - The link to background image.
    * currentyear - The current year value.

    Example context (json):
    {
        "video_img_url": "https://moodle.org/local/intellidata/assets/img/video.png",
        "play_btn_url": "https://moodle.org/local/intellidata/assets/img/play.png",
        "bg_img_url": "https://moodle.org/local/intellidata/assets/img/bg.png",
        "currentyear": "2023"
    }
}}
<div class="intellidata-support-wrapper">
    <div class="intellidata-support" style="background: #F7FAFE url('{{video_img_url}}') no-repeat top right;">

        <div class="intellidata-support-text">

            <h2>{{#str}} support_title, local_intellidata {{/str}}</h2>

            <div class="intellidata-support-links-header">
                {{#str}} support_text1, local_intellidata {{/str}}
            </div>

            <div class="intellidata-support-version">
                {{#str}} support_text2, local_intellidata {{/str}}
            </div>

            <div class="intellidata-proposals">
                <div class="intellidata-proposal">
                    <div class="proposal-title">
                        {{#str}} support_column1_title, local_intellidata {{/str}}
                    </div>
                    {{#str}} support_column1_text, local_intellidata {{/str}}
                </div>
                <div class="intellidata-proposal">
                    <div class="proposal-title">
                        {{#str}} support_column2_title, local_intellidata {{/str}}
                    </div>
                    {{#str}} support_column2_text, local_intellidata {{/str}}
                </div>
                <div class="intellidata-proposal">
                    <div class="proposal-title">
                        {{#str}} support_column3_title, local_intellidata {{/str}}
                    </div>
                    {{#str}} support_column3_text, local_intellidata {{/str}}
                </div>
            </div>

            <div class="intellidata-proceed-setup">
                {{#str}} support_text3, local_intellidata {{/str}}
            </div>

            <div class="intellidata-footer-contact">
                {{#str}} support_text4, local_intellidata {{/str}}
            </div>
        </div>

        <div class="intellidata-support-play" style="background: url('{{play_btn_url}}') no-repeat top left;"></div>
        <div class="intellidata-support-player">
            <div style="padding:56.25% 0 0 0;position:relative;">
                <iframe id="intellidatavideo" src="https://player.vimeo.com/video/390827913?title=0&byline=0&portrait=0"
                        style="position:absolute;top:0;left:0;width:100%;height:100%;" frameborder="0" allow="autoplay; fullscreen" allowfullscreen></iframe>
            </div>
            <button type="button" class="btn btn-default">
                {{#str}} support_close, local_intellidata {{/str}}
            </button>
        </div>


        <div class="intellidata-support-bg" style="background: url('{{bg_img_url}}') no-repeat top right;"></div>
    </div>

    <div class="intellidata-support-contacts">
        <strong>For additional information, please visit us at <a href="https://intelliboard.net/">www.IntelliBoard.net</a></strong>
        <strong>For questions, please contact us at <a href="mailto:Info@IntelliBoard.net">Info@IntelliBoard.net</a></strong>
    </div>
    <div class="intellidata-support-terms">
        Â© 2014 - {{currentyear}} IntelliBoard, Inc.<br>
        {{#str}} support_terms, local_intellidata {{/str}}
    </div>
</div>

<script src="https://player.vimeo.com/api/player.js"></script>
{{#js}}
    require(['jquery'], function($) {
        var iframe = document.getElementById('intellidatavideo');
        var player = new Vimeo.Player(iframe);

        $('.intellidata-support-player button').on('click', function() {
            $('.intellidata-support-player').hide();
            player.pause();
        });
        $('.intellidata-support-play').on('click', function() {
            $('.intellidata-support-player').show();
            player.play();
        });
    });
{{/js}}